# ========================================
# CINIX HEALTH MANAGEMENT SYSTEM
# Environment Configuration
# ========================================

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration (Local - MongoDB Compass)
MONGO_URI=mongodb://127.0.0.1:27017/clinix
# Alternative: mongodb://localhost:27017/clinix

# JWT Authentication
JWT_SECRET=clinix-health-system-secret-key-2024-change-in-production
JWT_EXPIRE=90d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration (Optional - for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880 # 5MB

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# App Info
APP_NAME=CliniX Health Management System
APP_VERSION=1.0.0